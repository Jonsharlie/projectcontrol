<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Personal</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">Dashboard</a></li>
                            <li class="active">Personal</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content -->
<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">
        <!-- Widgets  -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row m-0">
                            <div class="col-sm-9">
                                <strong class="card-title">Listado de personal</strong>
                            </div>
                            <div class="col-sm-3">
                                <div class="float-right">
                                    <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#modal-form-personal">Nuevo Personal</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnListPersonal">Listado</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="listPersonal">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>N° documento</th>
                                        <th>Tipo de personal</th>
                                        <th>Área</th>
                                        <th>Cargo</th>
                                        <th>Estado</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (staffs.status == 404) { %>
                                    <tr>
                                        <td colspan="8">No se encontraron registros</td>
                                    </tr>
                                    <% } else { %>
                                        <% staffs.data.forEach(function(staff) { %>
                                            <tr>
                                                <td><%= staff.firstName %></td>
                                                <td><%= staff.lastName %></td>
                                                <td><%= staff.documentNumber %></td>
                                                <td><%= staff.typeStaff.name %></td>
                                                <td><%= staff.area.name %></td>
                                                <td><%= staff.charge.name %></td>
                                                <td>
                                                    <% if (staff.state) { %>
                                                        <i class="fa fa-check"></i>
                                                    <% } else { %>
                                                        <i class="tim-icons icon-simple-remove"></i>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="javascript:void(0)" class="editPersonal" data-id="<%= staff.id %>"><i class="fa fa-pencil"></i></a>
                                                    <a href="javascript:void(0)" class="deletePersonal" data-id="<%= staff.id %>"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Widgets -->
        <div class="modal fade" id="modal-form-personal" tabindex="-1" role="dialog" aria-labelledby="modal-personal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal-personal">Nuevo personal</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="tim-icons icon-simple-remove"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formPersonal">
                            <input type="hidden" name="idPersonal" id="idPersonal"/>
                            <div class="form-group">
                                <label for="firstName">Nombre(s)</label>
                                <input type="text" id="firstName" placeholder="Juan" class="form-control form-control-sm">
                            </div>
                            <div class="form-group">
                                <label for="lastName">Apellidos</label>
                                <input type="text" id="lastName" placeholder="Pérez" class="form-control form-control-sm">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" id="email" placeholder="juan.perez@email.com" class="form-control form-control-sm">
                            </div>
                            <div class="form-group">
                                <label for="phone">Teléfono</label>
                                <input type="text" id="phone" placeholder="994263100" class="form-control form-control-sm">
                            </div>
                            <div class="form-group">
                                <label for="id_typestaff">Tipo de trabajador</label>
                                <select class="form-control form-control-sm" name="id_typestaff" id="id_typestaff">
                                    <% if(typeStaffs.status == 404) {%>
                                    <option value="0">Sin resultados</option>
                                    <% } else { %>
                                        <% typeStaffs.data.forEach(function(typeStaff) { %>
                                            <option value="<%= typeStaff.id %>"><%= typeStaff.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="id_typedocument">Tipo de documento</label>
                                <select class="form-control form-control-sm" name="id_typedocument" id="id_typedocument">
                                    <% if(typeDocuments.status == 404) {%>
                                    <option value="0">Sin resultados</option>
                                    <% } else { %>
                                        <% typeDocuments.data.forEach(function(typeDocument) { %>
                                            <option value="<%= typeDocument.id %>"><%= typeDocument.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="documentNumber">Número de documento</label>
                                <input type="text" id="documentNumber" name="documentNumber" placeholder="41526396" class="form-control form-control-sm">
                            </div>
                            <div class="form-group">
                                <label for="id_area">Área</label>
                                <select class="form-control form-control-sm" name="id_area" id="id_area">
                                    <% if(areas.status == 404) {%>
                                    <option value="0">Sin resultados</option>
                                    <% } else { %>
                                        <% areas.data.forEach(function(area) { %>
                                            <option value="<%= area.id %>"><%= area.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="id_cargo">Cargo</label>
                                <select class="form-control form-control-sm" name="id_cargo" id="id_cargo">
                                    <% if(cargos.status == 404) {%>
                                    <option value="0">Sin resultados</option>
                                    <% } else { %>
                                        <% cargos.data.forEach(function(cargo) { %>
                                            <option value="<%= cargo.id %>"><%= cargo.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="guardarPersonal">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    <!-- /#add-category -->
    </div>
    <!-- .animated -->
</div>
<!-- /.content -->