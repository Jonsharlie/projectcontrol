<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Área</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">Dashboard</a></li>
                            <li class="active">Área</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content -->
<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">
        <!-- Widgets  -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row m-0">
                            <div class="col-sm-9">
                                <strong class="card-title">Listado de áreas</strong>
                            </div>
                            <div class="col-sm-3">
                                <div class="float-right">
                                    <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#modal-form-area">Nueva Área</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnListArea">Listado</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="listArea">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Estado</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (areas.status == 404) { %>
                                    <tr>
                                        <td colspan="3">No se encontraron registros</td>
                                    </tr>
                                    <% } else { %>
                                        <% areas.data.forEach(function(area) { %>
                                            <tr>
                                                <td><%= area.name %></td>
                                                <td>
                                                    <% if (area.state) { %>
                                                        <i class="fa fa-check"></i>
                                                    <% } else { %>
                                                        <i class="tim-icons icon-simple-remove"></i>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="javascript:void(0)" class="editarArea" data-id="<%= area.id %>"><i class="fa fa-pencil"></i></a>
                                                    <a href="javascript:void(0)" class="eliminarArea" data-id="<%= area.id %>"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Widgets -->
        <div class="modal fade" id="modal-form-area" tabindex="-1" role="dialog" aria-labelledby="modal-area" aria-hidden="true">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="row m-0">
                            <div class="col-sm-10">
                                <h5 class="modal-title" id="modal-area">Nueva Área</h5>
                            </div>
                            <div class="col-sm-2">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body">
                        <form id="formArea">
                            <input type="hidden" name="idArea" id="idArea"/>
                            <div class="form-group">
                                <label for="nombreArea">Nombre de área</label>
                                <input type="text" id="nombreArea" placeholder="Desarrollo" class="form-control form-control-sm">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="guardarArea">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    <!-- /#add-category -->
    </div>
    <!-- .animated -->
</div>
<!-- /.content -->