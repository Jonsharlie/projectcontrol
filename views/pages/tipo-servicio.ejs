<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Tipo de servicio</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">Dashboard</a></li>
                            <li class="active">Tipo de servicio</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content -->
<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">
        <!-- Widgets  -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row m-0">
                            <div class="col-sm-8">
                                <strong class="card-title">Listado de tipos de servicio</strong>
                            </div>
                            <div class="col-sm-4">
                                <div class="float-right">
                                    <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#modal-form-tiposervicio">Nuevo Tipo de servicio</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnListTipoServicio">Listado</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="listTipoServicio">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Estado</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeServices.status == 404) { %>
                                    <tr>
                                        <td colspan="3">No se encontraron registros</td>
                                    </tr>
                                    <% } else { %>
                                        <% typeServices.data.forEach(function(typeService) { %>
                                            <tr>
                                                <td><%= typeService.name %></td>
                                                <td>
                                                    <% if (typeService.state) { %>
                                                        <i class="fa fa-check"></i>
                                                    <% } else { %>
                                                        <i class="tim-icons icon-simple-remove"></i>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="javascript:void(0)" class="editTipoServicio" data-id="<%= typeService.id %>"><i class="fa fa-pencil"></i></a>
                                                    <a href="javascript:void(0)" class="deleteTipoServicio" data-id="<%= typeService.id %>"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Widgets -->
        <div class="modal fade" id="modal-form-tiposervicio" tabindex="-1" role="dialog" aria-labelledby="modal-form-tiposervicio" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal-tiposervicio">Nuevo tipo de servicio</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="tim-icons icon-simple-remove"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formTipoServicio">
                            <input type="hidden" name="idTipoServicio" id="idTipoServicio"/>
                            <div class="form-group">
                                <label for="nombreTipoServicio" class="form-control-label">Nombre de tipo de servicio</label>
                                <input type="text" id="nombreTipoServicio" name="nombreTipoServicio" placeholder="Desarrollo de software" class="form-control form-control-sm">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="guardarTipoServicio">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    <!-- /#add-category -->
    </div>
    <!-- .animated -->
</div>
<!-- /.content -->