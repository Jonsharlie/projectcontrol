<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Proyecto</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">Dashboard</a></li>
                            <li class="active">Proyecto</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content -->
<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">
        <!-- Widgets  -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row m-0">
                            <div class="col-sm-9">
                                <strong class="card-title">Listado de proyectos</strong>
                            </div>
                            <div class="col-sm-3">
                                <div class="float-right">
                                    <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#modal-form-proyecto">Nuevo Proyecto</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnListProyecto">Listado</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="listProyecto">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Final</th>
                                        <th>Cliente</th>
                                        <th>Presupuesto</th>
                                        <th>Estado</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (projects.status == 404) { %>
                                    <tr>
                                        <td colspan="7">No se encontraron registros</td>
                                    </tr>
                                    <% } else { %>
                                        <% projects.data.forEach(function(project) { %>
                                            <tr>
                                                <td><%= project.name %></td>
                                                <td><%= project.startDate %></td>
                                                <td><%= project.endDate %></td>
                                                <td><%= project.customer.name %></td>
                                                <td><%= project.budget %></td>
                                                <td>
                                                    <% if (project.state) { %>
                                                        <i class="fa fa-check"></i>
                                                    <% } else { %>
                                                        <i class="tim-icons icon-simple-remove"></i>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="javascript:void(0)" class="editProyecto" data-id="<%= project.id %>"><i class="fa fa-pencil"></i></a>
                                                    <a href="javascript:void(0)" class="deleteProyecto" data-id="<%= project.id %>"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Widgets -->
        <div class="modal fade" id="modal-form-proyecto" tabindex="-1" role="dialog" aria-labelledby="modal-proyecto" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal-proyecto">Nuevo proyecto</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="tim-icons icon-simple-remove"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formProyecto">
                            <input type="hidden" name="idProyecto" id="idProyecto"/>
                            <div class="form-group">
                                <label for="name">Nombre</label>
                                <input type="text" id="name" placeholder="Diseño y desarrollo de ecommerce" class="form-control form-control-sm">
                            </div>
                            <div class="form-group">
                                <label for="description">Descripción</label>
                                <textarea class="form-control form-control-sm" name="description" id="description" cols="30" rows="5"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="startDate">Fecha Inicio</label>
                                <input type="date" name="startDate" id="startDate" class="form-control form-control-sm"/>
                            </div>
                            <div class="form-group">
                                <label for="endDate">Fecha Final</label>
                                <input type="date" name="endDate" id="endDate" class="form-control form-control-sm"/>
                            </div>
                            <div class="form-group">
                                <label for="budget">Presupuesto</label>
                                <input type="text" name="budget" id="budget" class="form-control form-control-sm"/>
                            </div>
                            <div class="form-group">
                                <label for="id_typestaff">Cliente</label>
                                <select class="form-control form-control-sm" name="id_customer" id="id_customer">
                                    <% if(clientes.status == 404) {%>
                                    <option value="0">Sin resultados</option>
                                    <% } else { %>
                                        <% clientes.data.forEach(function(cliente) { %>
                                            <option value="<%= cliente.id %>"><%= cliente.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="id_area">Tipo de servicio</label>
                                <select class="form-control form-control-sm" name="id_typeservice" id="id_typeservice">
                                    <% if(tipoServicios.status == 404) {%>
                                    <option value="0">Sin resultados</option>
                                    <% } else { %>
                                        <% tipoServicios.data.forEach(function(tipoServicio) { %>
                                            <option value="<%= tipoServicio.id %>"><%= tipoServicio.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="guardarCliente">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    <!-- /#add-category -->
    </div>
    <!-- .animated -->
</div>
<!-- /.content -->